<div class="navbar navbar-light bg-light py-3">
        <i class="fa-solid fa-clapperboard font-size: 2rem"></i>
      <div>
        <%= link_to "👈🏻 Back to all lists", root_path, class: "navbar-brand small font-size: 1rem"%>
        <%= link_to "Create a new bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-info"%>
      </div>
</div>
<p style="color: green"><%= notice %></p>

<div class="container">
<h1><%= @list.name %> List</h1>
</div>
<div class="container">
  <div class="row mt-5">
      <div class="col-4">
    <% @bookmarks.each do |bookmark| %>
      <h4><%= bookmark.movie.title %> </h4>
      <div style = "background-image: url(<%=bookmark.movie.poster_url%>); height: 100vh; width: 500px;">
      </div>
      <%= bookmark.movie.overview %>
      <p>Average rating: <%= bookmark.movie.rating %></p>
      <p>Comment: <%= bookmark.comment %> </p>
      <%= link_to "Delete bookmark",
        list_bookmark_path(bookmark.id),
        data: { turbo_method: "delete", turbo_confirm: "Are you sure?" } %>
    <% end %>
      </div>
  </div>
</div>
